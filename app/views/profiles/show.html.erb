
<div class="banner text-muted">
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4 offset-1">
      <br>
      <br>
      <h3>
        <%= @user.email %>
      </h3>

      <p class="lead">

        <%= link_to "Followers", followers_profile_path(@user.id) %>: <%= @user.followers_count %>
      </p>


      <p class="lead">
        <%= link_to "Follows", follows_profile_path(@user.id) %>: <%= @user.follow_count %>
      </p>


      <% if current_user === @user %>
      <% else %>


        <% if current_user.following?(@user) %>

          <%= link_to "Unfollow", unfollow_profile_path(@user.id), class: 'btn btn-danger' %>

        <% else %>

          <%= link_to "Follow Me", follow_profile_path(@user.id), class: 'btn btn-primary' %>

        <% end %>

      <% end %>
    </div>


  </div>
</div>
